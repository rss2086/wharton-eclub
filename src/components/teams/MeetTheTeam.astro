---
const {Team} = Astro.props
interface People {
  name: string;
  role: string;
  image: {
    filename:string,
  }
  bio: string;
  linkedinUrl: string;
  expertise: string;
  hobbies:string;
  companyLink:string;
}

---
<h2
class="mt-2 text-4xl font-bold tracking-tight text-gray-900 sm:text-4xl text-center pt-24"
>
Our Team
</h2>
<div class="bg-white py-24 md:py-24">
    <div class="mx-auto grid max-w-7xl grid-cols-1 gap-x-8 gap-y-20 px-6 lg:px-8 xl:grid-cols-5">
      <ul role="list" class="-mt-12 space-y-12 divide-y divide-gray-200 xl:col-span-5">
        {Team.map((person:People) => (
          <li class="flex flex-col gap-10 pt-12 sm:flex-row bg-white">
            <img class="aspect-[4/5] w-[28rem] flex-none rounded-2xl object-cover" src={person?.content.image.filename} alt="" />
            <div class="max-w-3xl flex-auto py-12">
              <h3 class="text-4xl font-semibold leading-8 tracking-tight text-gray-900">{person?.content.name}</h3>
              <p class="leading-7 text-gray-600 text-lg py-2 italic">{person?.content.role}</p>
              <ul role="list" class="mt-2 flex gap-x-6">
                <li>
                  <a href={person?.content.linkedinUrl.url} class="text-gray-400 hover:text-gray-500">
                    <span class="sr-only">LinkedIn</span>
                    <svg class="h-5 w-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
                      <path
                        fill-rule="evenodd"
                        d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z"
                        clip-rule="evenodd"
                      />
                    </svg>
                  </a>
                </li>
              </ul>
              <p class="mt-6 text-base leading-7 line-clamp-6">{person?.content.bio}</p>
              <h3 class="mt-6 text-lg font-semibold leading-8 tracking-tight text-gray-900">Areas of Expertise</h3>
              <p class="text-base leading-7">{person?.content.expertise}</p>
              <h3 class="mt-6 text-lg font-semibold leading-8 tracking-tight text-gray-900">Hobbies and Interests</h3>
              <p class="text-base leading-7">{person?.content.hobbies}</p>
              <h3 class="mt-6 text-lg font-semibold leading-8 tracking-tight text-gray-900">Company</h3>
              <a href="https://mip.fund" class="leading-7 underline">{person?.content.companyLink.url}</a>
            </div>
          </li>
        ))}
      </ul>
    </div>
  </div>
)